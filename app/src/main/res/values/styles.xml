<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //Текста
    //Заголовок карточки товара
    <style name="TextTitle1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="price_on_map" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">#011ef9</item>
    </style>


    //Заголовок списка товара
    <style name="ListTextTitle1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#000000</item>
    </style>

    //Средняя цена списка товара
    <style name="ListMidPrice" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">#002aff</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Средняя цена списка товара
    <style name="ListLowPrice" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProductRaitigBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#6e6c54</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>

    //Средняя цена списка товара
    <style name="CardMidPrice" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14pt</item>
        <item name="android:textColor">#002aff</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Средняя цена списка товара
    <style name="CardLowPrice" parent="TextAppearance.AppCompat">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
